{
    "version": "2.0.0",

    "command": "\"& { Invoke-Build -Task $args }\"",

    "type": "shell",
    "options": {
        "shell": {
            "executable": "powershell.exe",
            "args": [ "-NoProfile", "-Command" ]
        }
    },
    "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "new"
    },

    "tasks": [
        {
            "label": "Test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
